<p id="notice"><%= notice %></p>
<h1>Your Location</h1>

  <div class="field">
    <p>Address: <%= @your_address %></p>
  </div>

  <div class="field">
    <p>Latitude: <%= @your_latitude %></p>
  </div>

  <div class="field">
    <p>Longitude: <%= @your_longitude %></p>
  </div>

  <h3>Nearby Hospital</h3>

  <ul>
  <% @locations.each do |location| %>
    <li><%= link_to location.address, location %> (<%= location.distance_from(@your_address) %> miles)</li>
  <% end %>
  </ul>

<%
=begin %>
<h2>Hospital Locations</h2>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
<%
=end %>
